@import 'bootstrap'

$headerBackground = #ed7717
$headerText = #90511d
$link = #a2591c

$subHeaderBackground= #eeeeee
$subHeaderBorder = #d7d7d7

$text = #55483d
$headingText = #d25e00;

body
  background url('/images/main.jpg')
  background-size cover

.site
  max-width 930px
  margin 0px auto
  margin-top 80px
  padding 15px

  h2
    color $headingText
    display block
    margin 0px
    height 30px
    font-size 2rem
    padding-left 10px


.header
  height 80px
  background $headerBackground

  .column
    @extend .col-sm-4
    text-align center

    .logo
      position absolute
      translate(-50%, -30px)
      z-index 1

    .pencil
      position absolute
      top -25px
      right 0px

  .side
    display none
    @media $media-min-tablet
       display: block

.services
  background #fff
  padding-top 40px
  @media $media-min-tablet
    background url('/images/sub-header-background.png') no-repeat top center #fff
    padding-top 50px

  .column
    @extend .col-sm-4
    padding 0

    p
      padding 15px
      text-align justify

    .image
      height 100px
      background-repeat no-repeat
      background-position center
      background-size cover
      @media $media-min-tablet
        height 200px

      &.offer1
        background-image: url('/images/offer1.jpg')
      &.offer2
        background-image: url('/images/offer2.jpg')
      &.offer3
        background-image: url('/images/offer3.jpg')
